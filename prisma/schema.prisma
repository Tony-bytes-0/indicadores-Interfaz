generator client {
  provider = "postgresql"
}

datasource db {
  provider = "postgres"
  url      = "postgresql://postgres:lonson123@localhost:5432/proyecto"
}

model Persona {
  nombre String  
  apellido  String
  identificacion String  @id 
  fecha_nacimiento DateTime
  direccion String
  tipo_sangre String
  genero String
  telefono String
  telefono_emergencia String
  historia_medica Historia_Medica[]
}

model Historia_Medica{
  persona Persona @relation(fields: [personaId], references: [identificacion])
  personaId String @unique
  altura String? 
  peso String ?
  temperatura String?
  tension_sistolica String?
  tension_diastolica String?
  fecha_Revision DateTime
  Observaciones String
  alergias String?
}